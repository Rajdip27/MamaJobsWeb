@model IEnumerable<Tactsoft.Core.Entities.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title">@ViewData["Title"] List</h3>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Create">
                            <i class="fa-regular fa-pen-to-square"></i> Add New
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyNameEnglishName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyNameBanglaName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Yes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.No)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanySizeId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CountryId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DistrictId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ThanaId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyAddressBangla)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyAddressEnglish)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IndustialTypeId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BusinessDescription)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BusinessTradeLicienceNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RLNO)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.WebsiteUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactPersonName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactPersonDesignation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactPersonEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactPersonMobile)
                                </th>
                                
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyNameEnglishName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyNameBanglaName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Yes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.No)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanySizeId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CountryId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DistrictId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ThanaId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyAddressBangla)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyAddressEnglish)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IndustialTypeId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BusinessDescription)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BusinessTradeLicienceNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RLNO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WebsiteUrl)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonDesignation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonMobile)
                                    </td>
                                    <td style="width:60px;text-align:center">
                                        @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "fa-regular fa-pen-to-square", @style = "color:green" }) |
                                        @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "fa-regular fa-eye", @style = "color:blue" }) |
                                        @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "fa-regular fa-trash-can", @style = "color:red" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
<partial name="~/Views/UIComponents/_bootstrapAlert.cshtml" />

@section Scripts{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": true, "autoWidth": true,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
    </script>
}
